# Invoice OCR Extractor - Environment Configuration
# ================================================
# Copy this file to .env and fill in your values

# Default LLM Provider (ollama, lm_studio, or deepseek)
DEFAULT_LLM_PROVIDER=ollama

# ===================
# Ollama Configuration
# ===================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_VISION_MODEL=llava
OLLAMA_TIMEOUT=120
OLLAMA_TEMPERATURE=0.1
OLLAMA_CONTEXT_LENGTH=8192

# ======================
# LM Studio Configuration
# ======================
LM_STUDIO_BASE_URL=http://localhost:1234
LM_STUDIO_MODEL=
LM_STUDIO_VISION_MODEL=
LM_STUDIO_TIMEOUT=120
LM_STUDIO_TEMPERATURE=0.1
LM_STUDIO_MAX_TOKENS=4096

# =====================
# Deepseek Configuration (Cloud Fallback)
# =====================
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_VISION_MODEL=
DEEPSEEK_TIMEOUT=60
DEEPSEEK_TEMPERATURE=0.1
DEEPSEEK_MAX_TOKENS=4096

# =====================
# Tesseract Configuration
# =====================
# Full path to tesseract executable (if not in PATH)
# macOS: /opt/homebrew/bin/tesseract
# Linux: /usr/bin/tesseract
# Windows: C:\Program Files\Tesseract-OCR\tesseract.exe
TESSERACT_CMD=tesseract

# OCR language (eng = English)
TESSERACT_LANGUAGE=eng

# Page segmentation mode (3 = auto)
TESSERACT_PSM=3

# OCR engine mode (3 = default, based on available)
TESSERACT_OEM=3

# =====================
# Application Settings
# =====================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum image dimension for processing (prevents memory issues)
MAX_IMAGE_DIMENSION=4000

# Target DPI for OCR (300 recommended)
TARGET_DPI=300
